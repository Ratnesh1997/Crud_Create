@model IEnumerable<CrudR.Models.Customer>
<a asp-action="Create" asp-controller="Customer" class="btn btn-outline-primary">ADD NEW CUSTOMER</a><br />
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Gender</th>
                <th>Mobile No</th>
                <th>Email_ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var items in Model)
            {
            <tr>
                <td>@items.Name</td>
                <td>@items.Gender</td>
                <td>@items.Mobile_No</td>
                <td>@items.Email_Id</td>
            </tr>
            }
        </tbody>
    </table>

</div>